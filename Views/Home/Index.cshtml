@model IEnumerable<HACKATHON.Models.VeriGirisi>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	Layout = "/Views/Shared/_Layout.cshtml";
}

<table class="table-bordered table table-striped table-hover text-center">
	<thead>
		<tr>
			<th>Kategori</th>
			<th>Grup</th>
			<th>Değer Türü</th>
			<th>Birim</th>
			<th>Veri Periyodu</th>
			<th>Sorumlu Ata</th>
			<th>Düzenle / Sil</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.DegerTuru.Grup.Kategori.KategoriAdi.ToString() </td>
				<td>@item.DegerTuru.Grup.GrupAdi.ToString() </td>
				<td>@item.DegerTuru.DegerTuruAdi.ToString() </td>
				<td>@item.DegerTuru.Birim.ToString() </td>
				<td>@item.DegerTuru.VeriPeriyodu.ToString() </td>
				<td>
					<a href="Home/SorumluAta/@item.DegerTuru.DegerTuruId">🆔</a>
				</td>
				<td>
					<a href="Home/DegerDuzenle/@item.DegerTuru.DegerTuruId">🔄</a>
					/
					<a href="Home/StateDegistir/@item.DegerTuru.DegerTuruId">✖</a>
				</td>

			</tr>
		}
	</tbody>
</table>

<br />	
<hr />
