				<td>@item.DegerTuru.Grup.GrupAdi.ToString() </td>
				<td>@item.DegerTuru.DegerTuruAdi.ToString() </td>
				<td>@item.DegerTuru.Birim.ToString() </td>
				<td>@item.DegerTuru.VeriPeriyodu.ToString() </td>
				
				<td>
					<a href="Home/DegerDuzenle/@item.DegerTuru.DegerTuruId">🔄</a>
